<% include header %>

<h2>새 후기 작성</h2>

<form method="post" role="form">
  <div class="form-group">
    <label for="title">제목</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="후기 제목" required>
  </div>
  <div class="form-group">
    <label for="body">입력 제목</label>
    <textarea class="form-control" id="body" name="body" placeholder="식당 메뉴를 말해줄게요." rows="3" required></textarea>
  </div>
  <div class="form-group">
    <input type="submit" value="후기 등록" class="btn btn-primary">
  </div>
</form>

